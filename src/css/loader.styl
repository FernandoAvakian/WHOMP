@keyframes loader
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.app-loader
  background rgba(220, 220, 220, 0.75)
  position absolute
  display none
  height 100%
  width 100%
  z-index 5
  left 0
  top 0

.app-loader__active
  @extend .app-loader
  display block
  & .foreground
    animation loader 0.95s cubic-bezier(0.645, 0.045, 0.355, 1.000) infinite

  &.imagery
    background rgba(225,225,225,0.25)
    position relative
    z-index 1
    .app-loader__spinner
      position relative
      height 50px
      width 50px
      left 50%
      top 50%
      transform translate(-50%, -50%)

  &.imagery-modal-width
    background transparent
    position relative


.app-loader__spinner
  transform translate(-50%, -50%)
  position absolute
  height 50px
  width 50px
  left 50%
  top 50%
