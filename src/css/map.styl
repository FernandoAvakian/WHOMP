.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides, they need multiple classes to make them higher priority, either that or !important
.map .esriLegendServiceLabel
  display none

.map .esriLegendService
  padding-bottom 0
  margin-bottom 0

.esriLegendLayer
  font-size 12px

.map .esriScalebar
  bottom 90px
  z-index 3

.noSlider .map .esriScalebar
  bottom 20px

.map__viewfinder
  margin -8px 0 0 -8px
  pointer-events none
  position absolute
  fill $darkGray
  height 16px
  width 16px
  z-index 50
  left 50%
  top 50%

@media (min-width: $mobileBreak)
  .esriScalebar
    left 50% !important
    & > div
      transform translate(-50%, 0)

@media (max-width: $mobileBreak)
  .map .esriScalebar
    bottom 60px
