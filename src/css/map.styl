.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides
.calcite .esriLegendServiceLabel
  display none

.esriLegendLayer
  font-size 12px

.calcite .map .esriScalebar
  z-index 4

@media (min-width: $mobileBreak)
  .esriScalebar
    left 50% !important
    & > div
      transform translate(-50%, 0)

@media (max-width: $mobileBreak)
  .esriScalebar
    bottom 60px !important
