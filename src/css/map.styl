.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides, they need multiple classes to make them higher priority, either that or !important
.map .esriLegendServiceLabel
  display none

.map .esriLegendService
  padding-bottom 0
  margin-bottom 0

.esriLegendLayer
  font-size 12px

.map .esriScalebar
  bottom 5px
  z-index 15

.map__viewfinder
  margin -8px 0 0 -8px
  pointer-events none
  position absolute
  fill $darkGray
  height 16px
  width 16px
  z-index 4
  left 50%
  top 50%

