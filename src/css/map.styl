.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides, they need multiple classes to make them higher priority, either that or !important
.map .esriLegendServiceLabel
  display none

.map .esriLegendService
  padding-bottom 0
  margin-bottom 0

.esriLegendLayer
  font-size 12px

.map .esriScalebar
  z-index 3

@media (min-width: $mobileBreak)
  .esriScalebar
    left 50% !important
    & > div
      transform translate(-50%, 0)

@media (max-width: $mobileBreak)
  .esriScalebar
    bottom 60px !important
