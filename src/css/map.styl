.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides, they need multiple classes to make them higher priority, either that or !important
.map .esriLegendServiceLabel
  display none

.map .esriLegendService
  padding-bottom 0
  margin-bottom 0

.esriLegendLayer
  font-size 12px

.map .esriScalebar
  bottom 5px
  z-index 5

.map .esriMeasurement
  text-align center
  margin-top 15px

.map .esriMeasurement .esriMeasurementSeparator
  display none

.esriMeasurement .esriToggleButton .dijitButtonNode
  width inherit !important

