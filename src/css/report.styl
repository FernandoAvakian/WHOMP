@require 'variables'

html
body
  font-family $fontFamily
  height 100%
  width 100%
  padding 0
  margin 0

@require 'grid'
@require 'base'
@require 'results'

//- Since this CSS is inlined, this will prevent the map from snapping down when
//- the title gets injected
.report-header
  position absolute
  background-color #555
  box-sizing border-box
  height $headerHeight
  display flex
  width 100%
  z-index 10
  left 0
  top 0

.report-header__logo-container
  // position: absolute
  // left: 1rem
  // top: 1.75rem
  // z-index: 1000
  padding 5px 10px 5px 20px

.report-header__logo
  height 60px

.report-header__title-container
  // flex-direction column
  align-items center
  display flex
  flex-wrap nowrap
  justify-content space-between
  // flex-grow 1
  // background-color #555
  // padding 0.5rem 0
  overflow hidden
  padding-top 5px
  width 100%

.report-header__title
  color #fff
  white-space nowrap
  line-height 25px
  overflow hidden
  font-size 20px

.report-header__subtitle
  font-weight normal
  line-height 20px

.report-header__icon-container
  display flex
  align-items center
  justify-content space-between
  flex-wrap nowrap
  flex-direction row
  margin-right 1.25rem
  
.report-header__icon 
  fill #eee
  padding 0 0.25rem
  height 2.5rem
  width 2.5rem
  cursor pointer
  &:hover
    fill #fff

.report-header__icon-print
  height 2rem
  width 2rem
  
.report-header__icon-info
  height 1.25rem
  width 2rem
  margin-left 0.5rem
  

.feature-title
  min-height 30px
  margin 5px 0

.map-analysis-area-container
  display flex
  flex-wrap nowrap

.map
  margin 10px auto
  height 400px
  width 50%

.analysis-area
  margin 10px auto
  height 400px
  width 50%
  background-color #eee
  position relative
  .analysis-area-subtitle 
    position absolute
    top 3rem
    left 1rem 

.analysis-area-list 
  list-style none
  position absolute
  top 5rem
  left 1rem
  .analysis-area-list-item:before
    content "â€¢"
    color #96BD3D
    margin-right 0.5rem


.popup-content
  margin 20px auto
  width 100%

.popup-content dl
.table-container dl
.restoration-table dl
  border 1px solid #AEAEAE
  margin 0 auto
  display table
  width 95%

.popup-content dl:nth-child(odd)
  background $lightGrayHighlight

.popup-content dt
.table-container dt
.restoration-table dt
.popup-content dd
.table-container dd
.restoration-table dd
  display table-cell
  font-size 14px
  padding 5px
  width 50%

.popup-content dt
  font-weight 500

.table-container
  background-color $reportTableBackground
  padding 20px 0
  width 100%
  & dl:nth-child(1)
  & dl:last-child
    font-weight bold
  & dl:nth-child(odd)
    background $reportTableRow
  & dl:nth-child(even)
    background white
  & dt
    width 80%
  & dd
    text-align right
    width 20%

.report-container
  display flex
  flex-direction column
  align-items flex-start

.results-container
  .results-chart
    margin-top 100px
  .vega-chart
    width 100%
    padding 1rem 2rem
    display flex
    flex-wrap: nowrap;
    flex-direction: column;
    .vega-chart-container 
      // border-top 1px solid #eee
      // padding-top 1rem
    canvas
      margin 0 auto
      display flex
      width 300px !important
      height auto !important
    .vega-bindings
      margin 0 auto
      display flex
    .vega-chart-info-container
      width 100%
      border-bottom 1px solid #eee
      padding-bottom 1rem
      .vega-chart-info
        color: #555
        padding: 0.5rem
        font-size x-small
        width: 75%
        margin 0 auto
        text-align center
      .data-error
        display flex
        justify-content center
    
.vega-chart_download-container
  display flex
  flex-flow row
  flex-wrap wrap
  align-items center
  justify-content space-between
  width 100%
  .vega-chart-menu
    margin-left auto
    display flex
    align-items center
    cursor pointer
    .vega-chart-menu-icon
      svg
        path
          fill #888 !important
    .vega-chart-menu-text
      color #888
      font-size x-small
      margin 0 0.5rem
      &:hover
        text-decoration underline
        text-decoration-color #888
    
// Restoration Module Styling
.results__restoration
.results__slope
  flex-direction column
  display flex

.results__slope > div
  margin 5px auto

.restoration__module
  flex-direction column
  margin 5px auto
  display flex
  width 100%
  & .restoration__grid:nth-of-type(2)
  & .restoration__description:nth-of-type(2)
    background $reportTableBackground
    padding 10px

.restoration__grid
  justify-content space-between
  flex-flow wrap row
  padding 10px 0
  display flex
  margin 0
  flex 1

.restoration-table
  margin 10px 0
  width 47%
  & dl:nth-of-type(1)
  & dl:last-child
    font-weight bold
  & dl:nth-child(odd)
    background $reportTableRow
  & dl:nth-child(even)
    background white
  & dd
    text-align right

.restoration-table__header
  font-weight normal
  margin-left 2.5%

.restoration__chart
  margin auto 0
  display flex
  height 225px
  width 40%

.chart-container
  width 100%

.restoration__description
.slope__description
  font-weight normal

.restoration__label
  padding 10px 0 0 10px

.restoration__description
  padding 0 10px 10px
  
.vega-chart-label
  text-transform uppercase
  text-align left 
  
.vega-chart_download-options
  flex 0 1 100%
  overflow auto
  max-height 110px
  min-width 150px
  display flex
  flex-direction column
  justify-content flex-end
  z-index 2
  a
    padding 8px 10px
    text-decoration none
    color #555
    font-size 12px
    background #fff
    border 0.75px solid #eee
    margin-left auto

  a:hover
    background #eee

  .download-option-label
    text-transform uppercase
    
.vega-chart_divider {
  color #ddd
}

@media (max-width: $mobileBreak)
  .restoration-table
  .restoration__chart
    margin 10px auto
    width 90%
  h3
  h4
    margin 0 5px
